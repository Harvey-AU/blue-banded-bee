{
  "name": "webflow-designer-extension-cli",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "compile": "tsc -p tsconfig.json",
    "build": "npm install && npm run compile && webflow extension bundle",
    "dev": "npm install && concurrently -r \"webflow extension serve\" \"npm run compile -- --watch --preserveWatchOutput\"",
    "lint": "eslint . --ext .ts",
    "format:check": "prettier --check \"./**/*.{ts,json,md,html,css,yml,yaml}\"",
    "format:write": "prettier --write \"./**/*.{ts,json,md,html,css,yml,yaml}\""
  },
  "devDependencies": {
    "@webflow/designer-extension-typings": "^2.0.2",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "eslint": "^8.5.7",
    "concurrently": "^8.2.2",
    "prettier": "^3.6.2",
    "typescript": "^5.4.5",
    "eslint-plugin-promise": "^6.1.1"
  }
}
